@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<VGSShop.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng" + ViewBag.CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
AdminOrders
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active">Danh sách đơn hàng : trang thứ @ViewBag.CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h2>Danh sách đơn hàng</h2>
        <div class="text-right" style="overflow: hidden; padding: 1px 0px 0px 0px; margin-top: -47px; margin-bottom: 10px;">
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("ExportToExcel", "AdminOrders")'">Xuất file Excel</button>
        </div>
        <div class="row m-b-30">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-5">
                        <div class="input-affix m-v-10">
                            <i class="prefix-icon anticon anticon-search opacity-04"></i>
                            <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="input-affix m-v-10">
                            <select class="custom-select" id="txtCatID" name="txtCatID" style="min-width:200px; " asp-items="ViewBag.TrangThaiDonHang">
                                <option selected>Chọn tất cả </option>
                                <option value="0" disabled selected>Lọc theo trạng thái đơn hàng</option>
                            </select>
                        </div>
                    </div>
                </div>

            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>ĐƠN HÀNG</th>
                            <th>KHÁCH HÀNG</th>
                            <th>NGÀY MUA</th>
                            <th>TỔNG TIỀN</th>
                            <th>TRẠNG THÁI</th>
                            <th>THAO TÁC</th>
                        </tr>
                    </thead>
                    <tbody id="records_table">
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.Customer.FullName</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.TotalMoney.ToString("#,##0") VNĐ</td>
                                    <td>@item.TransactStatus.Status</td>
                                    <td class="text-right">
                                        <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminOrders" asp-action="Details" asp-route-id="@item.OrderId">Chi tiết</a>
                                        <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminOrders" asp-action="Edit" asp-route-id="@item.OrderId">Cập nhật trạng thái</a>
                                        @*<a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminOrders" asp-action="Delete" asp-route-id="@item.OrderId">Xóa</a>*@
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminOrders" asp-action="Index" />
                    </ul>
                </div>
            </div>
        </div>
    </div>
@section Script{
    <script>
        $(document).ready(function () {
            jQuery("#txtCatID").change(function () {
                var catID = jQuery(this).children(":selected").attr("value");
                catID = parseFloat(catID);
                $('#txtCatID option')
                    .removeAttr('selected');
                $("#txtCatID > [value=" + catID + "]").attr("selected", "true");

                //var gvID = jQuery(this).children(":selected").attr("value");
                //gvID = parseFloat(gvID);
                //$('#txtTeacherID option')
                //    .removeAttr('selected');
                //$("#txtTeacherID > [value=" + gvID + "]").attr("selected", "true");

                $.ajax({
                    url: '/Admin/AdminOrders/Filtter',
                    datatype: "json",
                    type: "GET",
                    data: {
                        TransactStatusID: catID,
                    },
                    async: true,
                    success: function (results) {
                        if (results.status == "success") {
                            window.location.href = results.redirectUrl;
                        }
                    },
                    error: function (xhr) {
                        alert('Đã xảy ra lỗi');
                    }
                });
            });

            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: '/Admin/Search/FindOrder/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $("#records_table").html("");
                        $("#records_table").html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });

    </script>
    <script src="~/AdminAssets/js/controller/feedbackControllerScript.js"></script>
}